@model Inventory.MVC.Models.ElementViewModel

@(Html.Kendo().PanelBar()
      .Name("panelbar")
      .ExpandMode(PanelBarExpandMode.Single)
      .Items(panelbar =>
      {
          panelbar.Add().Text("Основни данни")
              .Expanded(true)
              .Content(@<text>

                @(
 Html.LabelFor(m => m.Id))

                @(
 Html.TextBoxFor(m => m.Id))

                @(
 Html.LabelFor(m => m.Name))

                @(
 Html.TextBoxFor(m => m.Name))


            </text>);

          panelbar.Add().Text("Общи данни")
              .Expanded(true)
                  .Content(Html.Partial("~/Views/CommonDataPartial.cshtml").ToHtmlString());


          panelbar.Add().Text("Бележки")
              .Expanded(true)
              .Content(Html.Partial("~/Views/NotesPartial.cshtml", Model).ToHtmlString());
             

          panelbar.Add().Text("Communication").Enabled(false);
      })
)
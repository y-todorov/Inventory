@model Inventory.DAL.Element

@(Html.Kendo().PanelBar()
      .Name("panelbar")
      .ExpandMode(PanelBarExpandMode.Single)
      .Items(panelbar =>
      {
          panelbar.Add().Text("Основни данни")
              .Expanded(true)
              .Content(@<text>

                @(
 Html.LabelFor(m => m.Id))

                @(
 Html.TextBoxFor(m => m.Id))

                @(
 Html.LabelFor(m => m.Name))

                @(
 Html.TextBoxFor(m => m.Name))


            </text>);

          panelbar.Add().Text("Общи данни")
              .Expanded(true)
                  .Content(@<text>

                @(
 Html.LabelFor(m => m.CreatedBy))

                @(
 Html.Kendo().TextBoxFor(m => m.CreatedBy).Enable(false))

                @(
 Html.LabelFor(m => m.CreatedOn))

                @(
 Html.Kendo().DateTimePickerFor(m => m.CreatedOn).Enable(false))

                @(
 Html.LabelFor(m => m.ModifiedBy))

                @(
 Html.Kendo().TextBoxFor(m => m.ModifiedBy).Enable(false))

                @(
 Html.LabelFor(m => m.ModifiedOn))

                @(
 Html.Kendo().DateTimePickerFor(m => m.ModifiedOn).Enable(false))


                </text>);


          panelbar.Add().Text("Programs")
              .Items(programs =>
              {
                  programs.Add().Text("Monday");
                  programs.Add().Text("Tuesday");
                  programs.Add().Text("Wednesday");
                  programs.Add().Text("Thursday");
                  programs.Add().Text("Friday");
              });

          panelbar.Add().Text("Communication").Enabled(false);
      })
)